<div class="toppage">
  <div class="flash-root">
    <% if notice %>
    <p id="notice-root"><%= flash[:notice]%></p>
    <% elsif alert %>
    <p id="alert-root"><%= flash[:alert]%></p>
    <% end %>
  </div>
  <div class="toppage-contents">
    <% if current_user %>
      <div class="page-title">
        <%= link_to raw("Personel<br/>Evaluation<br/>Program"), users_path %>
      </div>
    <% else %>
      <div class="page-title">
        <%= link_to raw("Personel<br/>Evaluation<br/>Program"), login_path %>
      </div>
    <% end %>
  </div>
</div>
