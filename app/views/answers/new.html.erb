<div class="container browser-default">
<div class="page-title">
<h3>部下を評価する</h3>
</div>

  <div class="contents row answer-table ">
    <!-- テーブルここから -->
    <table class="bordered">
    <!-- 表の頭の部分 -->
      <thead >
        <tr>
        </tr>
        </thead>


        <!-- 表の中身 -->
      <%= form_for (@answer) do |f| %>
        <tbody>
        <% @questions.each do |question|%>
        <tr>
        <td class="question-bold question_id"><%= question.id %></td><td colspan=3 class="question-bold"><%= question.text %></td><td></td>
        </tr>
        <tr>
          <td>
          <%= f.radio_button 'rate', 0, name:"answer_rate", id:"rate0"%>
          <label for="rate0"><%= question.question_alternatives.find_by(rate: 0).text %></label>
          </td>
          <td>
            <%= f.radio_button 'rate', 0, name:"answer_rate", id:"rate1"%>
            <label for="rate1"><%= question.question_alternatives.find_by(rate: 1).text %></label>
            </td>
          <td>
            <%= f.radio_button 'rate', 0, name:"answer_rate", id:"rate2"%>
            <label for="rate2"><%= question.question_alternatives.find_by(rate: 2).text %></label>
            </td>
          <td><%= f.radio_button 'rate', 0, name:"answer_rate", id:"rate3"%><label for="rate3"><%= question.question_alternatives.find_by(rate: 3).text %></label>
          </td>
          <td><%= f.radio_button 'rate', 0, name:"answer_rate", id:"rate4"%><label for="rate4"><%= question.question_alternatives.find_by(rate: 4).text %></td></label>
        </tr>
        <tr><td></td><td></td><td></td><td></td><td><div class="actions right-align">
      <%= f.submit '登録', :class=>"btn btn-large btn-answer" %>
      </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <!-- テーブルここまで -->
      <% end %>
  </div>
</div>

