<div class="container browser-default">
  <div class="page-title">
    <h3>部下を評価する</h3>
  </div>

  <div class="contents row answer-table ">
    <!-- テーブルここから -->
    <table class="bordered highlight">
      <%= form_for (@answer) do |f| %>
        <tbody>
          <% @questions.each_with_index do |question, i|%>
            <tr>
              <td class="question-bold question_id"></td><td colspan=3 class="question-bold"><%= question.text %></td><td></td>
            </tr>
            <tr>
              <td>
                <%= f.radio_button 'rate', 0, name:"answer_rate#{i}", id:"rate0_#{i}", class:"with-gap"%>
                <label for="rate0_<%= i %>"><%= question.question_alternatives.find_by(rate: 0).text %></label>
              </td>
              <td>
                <%= f.radio_button 'rate', 1, name:"answer_rate#{i}", id:"rate1_#{i}", class:"with-gap"%>
                <label for="rate1_<%= i %>"><%= question.question_alternatives.find_by(rate: 1).text %></label>
              </td>
              <td>
                <%= f.radio_button 'rate', 2, name:"answer_rate#{i}", id:"rate2_#{i}", class:"with-gap"%>
                <label for="rate2_<%= i %>"><%= question.question_alternatives.find_by(rate: 2).text %></label>
              </td>
              <td>
                <%= f.radio_button 'rate', 3, name:"answer_rate#{i}", id:"rate3_#{i}", class:"with-gap"%>
                <label for="rate3_<%= i %>"><%= question.question_alternatives.find_by(rate: 3).text %></label>
              </td>
              <td>
                <%= f.radio_button 'rate', 4, name:"answer_rate#{i}", id:"rate4_#{i}", class:"with-gap"%>
                <label for="rate4_<%= i %>"><%= question.question_alternatives.find_by(rate: 4).text %>
              </td></label>
            </tr>
          <% end %>
        </tbody>
    </table>
    <!-- テーブルここまで -->
        <div class="actions right-align">
          <%= hidden_field_tag :answered_user_id, @user.id %>
          <%= f.submit '回答', :class=>"btn btn-large btn-answer" %>
        </div>
      <% end %>
  </div>
</div>

