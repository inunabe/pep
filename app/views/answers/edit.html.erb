<div class="page-title">
  <h3>評価編集</h3>
</div>

<div class="contents row answer-table ">
    <!-- テーブルここから -->
  <%= form_for(@answer) do |f| %>
    <table class="bordered highlight">
            <tr>
              <td colspan=5 class="question-bold">
                <%= @question.text %>
              </td>
            </tr>
            <tr>
              <td>
                <!-- カラム名、送る値、 -->
                <%= f.radio_button 'rate', 0, name:"rate", id:"rate0", class:"with-gap" %>
                <label for="rate0"><%= @question.question_alternatives.find_by(rate: 0).text %></label>
              </td>
              <td>
                <%= f.radio_button 'rate', 1, name:"rate", id:"rate1", class:"with-gap" %>
                <label for="rate1"><%= @question.question_alternatives.find_by(rate: 1).text %></label>
              </td>
              <td>
                <%= f.radio_button 'rate', 2, name:"rate", id:"rate2", class:"with-gap" %>
                <label for="rate2"><%= @question.question_alternatives.find_by(rate: 2).text %></label>
              </td>
              <td>
                <%= f.radio_button 'rate', 3, name:"rate", id:"rate3", class:"with-gap" %>
                <label for="rate3"><%= @question.question_alternatives.find_by(rate: 3).text %></label>
              </td>
              <td>
                <%= f.radio_button 'rate', 4, name:"rate", id:"rate4", class:"with-gap" %>
                <label for="rate4"><%= @question.question_alternatives.find_by(rate: 4).text %></label>
              </td>
            </tr>
    </table>
    <!-- テーブルここまで -->
        <div class="actions right-align">
          <%= hidden_field_tag :answered_user_id, @user.id %>
          <%= f.submit '回答', :class=>"btn btn-large btn-answer waves-effect waves-light" %>
        </div>
        <% end %>
</div>

