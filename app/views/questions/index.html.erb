  <div class="page-title">
    <h3>質問項目一覧</h3>
  </div>
  <div class="contents row questions-table ">
    <table class="bordered highlight">
    <!-- 表の頭の部分 -->
      <thead >
        <tr>
        <!-- <td>id</td><td>質問項目</td> -->
        </tr>
        </thead>


        <!-- 表の中身 -->
        <tbody>
        <% @questions.each do |question|%>
        <tr>
        <td><%= question.text %></td>
        <td><%= link_to "編集", edit_question_path(question) %></td>
        <td><%= link_to '消去', question_path(question), method: :delete, data: { confirm: '本当に消去しますか?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
