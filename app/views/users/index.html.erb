<div class="page-title">  <h3>ユーザーリスト</h3></div>  <table class="bordered highlight">    <tbody>      <% @users.each_with_index do |user,i| %>        <tr>          <td class="user-name"><%= "#{i + 1}" %></td>          <td class="user-name"><%= user.name %></td>          <td class="user-email"><%= user.email %></td>        <% if current_user.admin? %>            <% if user.answered_answer.present? %>          <td class="user-link"><%= link_to '評価閲覧', user_path(user) %></td>            <% else %>          <td></td>            <% end %>          <td class="user-link"><%= link_to '編集', edit_user_path(user) %></td>          <td class="user-link"><%= link_to 'ユーザー消去', user_path(user), method: :delete, data: { confirm: '本当に消去しますか?' } %></td>        <% end %>        </tr>      <% end %>    </tbody>  </table>