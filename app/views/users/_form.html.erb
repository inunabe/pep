<%= form_for (@user) ,class: "col s12" do |f| %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
       <h4><%= @user.errors.size %> 件のエラーがあります</h4>

      <ul>
      <% @user.errors.full_messages.each  do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<!-- ここからフォーム -->
  <div class="row">
    <div class="input-field col s12">
      <%= f.label :メールアドレス %><br>
      <%= f.text_field :email, id: "email", class: "register-form"%>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s12">
      <%= f.label :パスワード %><br>
      <%= f.password_field :password, id: "password", class: "register-form"%>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s12">
      <%= f.label :パスワード（確認）%><br>
      <%= f.password_field :password_confirmation, id: "password", class: "register-form" %>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s12">
      <%= f.label :氏名 %><br>
      <%= f.text_field :name, id: "name", class: "register-form", :placeholder => "苗字と名前の間にスペースを入れてください"%>
    </div>
  </div>
  <div class="row">
  <!-- チェックボックス(role設定) -->
    <div class="input-field col s6">
        <%= f.label :区分 %><br>
        <%= f.select :role, [["一般", "normal"], ["課長・次長", "ruby_base"],["部長","executive"],["管理者","admin"]],  :prompt => "区分を選択してください", class: "register-form" %>
    </div>
  <!-- チェックボックス(上長登録) -->
    <div class="input-field col s6">
      <%= f.label :上長 %><br>
      <%= f.select :superior_id, [["上司の名前", "上司のid"], ["上司の名前", "上司のid"]],  :prompt => "上長を選択してください", class: "register-form" %><br>
    </div>
  </div>
  <!-- ここまで -->
  <div class="actions">
    <%= f.submit '登録', class: 'btn btn-register' %>
  </div>


<% end %>
